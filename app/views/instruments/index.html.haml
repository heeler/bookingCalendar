%h1 Listing instruments

#instrument_table
	%ul
		%li Name
		%li Model
		%br/
	- @instruments.each do |inst| 
		%instrument
			%ul
				%li= link_to h(inst.name), instrument_path(inst)
				%li=h inst.model
				- if admin? 
					%d= link_to 'Edit', edit_instrument_path(inst) 
					%d= link_to 'Destroy', instrument_path(inst), :confirm => 'Are you sure?', :method => :delete 
				%br/

%br/

= link_to 'New instrument', new_instrument_path if admin?
