
%table.instruments
	%thead
		%tr.instrument
			%th
				Name
			%th
				Model
			%th.status
				Status
			%th
				Description
			-if admin?
				%th
					Admin					
					
	%tbody	
		%tr.instrument
			%td
				=h @instrument.name 
			%td
				=h @instrument.model
			%td.status
				= image_tag(img_name(@instrument), :border => 0)
			%td 
				= @instrument.description
			- if admin?
				%td
					%d= link_to 'Edit', edit_instrument_path(@instrument) 
					%d= link_to 'Destroy', instrument_path(@instrument), :confirm => 'Are you sure?', :method => :delete 
		

- if authorized? && @instrument.working
