- form_for(@instrument) do |f| 
	= f.error_messages 

	%p
		= f.label :name 
		%br/
		= f.text_field :name 
	%p
		= f.label :model 
		%br/
		= f.text_field :model 
	%p
		= f.label :description 
		%br/
		= f.text_area :description 
	%p
		= f.label :working 
		%br/
		= f.check_box :working
	%p= f.submit 'Submit'
	