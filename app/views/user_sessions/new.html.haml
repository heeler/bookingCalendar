%title "Login" 

-form_for @user_session do |f| 
	= f.error_messages
	.user_form
		.form_left
			%h2= "Username/Password"
		.form_right
			%h2= "OpenID"
			.tiny= "example: heeler.myopenid.com"
	.user_form
		.form_left
			= f.label :username 
			%br/
			= f.text_field :username 
		.form_right
			= f.label :openid_identifier, "OpenID URL"
			%br/
			= f.text_field :openid_identifier 
			.tiny= "https://www.google.com/accounts/o8/id" 
			%p= f.submit "Submit"
	.user_form
		.form_left
			= f.label :password 
			%br/
			= f.password_field :password 
			%p= f.submit "Submit"
			


